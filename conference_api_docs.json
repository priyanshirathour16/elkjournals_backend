{
    "conference_api": {
        "base_url": "/api/conferences",
        "description": "API endpoints for managing conferences and their detailed templates",
        "endpoints": [
            {
                "group": "Conference (Base Entity)",
                "endpoints": [
                    {
                        "method": "GET",
                        "path": "/",
                        "description": "Get all conferences (for dropdown)",
                        "response": {
                            "success": [
                                {
                                    "id": 1,
                                    "name": "International Conference on AI",
                                    "createdAt": "2024-01-01T10:00:00.000Z"
                                }
                            ]
                        }
                    },
                    {
                        "method": "POST",
                        "path": "/",
                        "description": "Create a new conference (Base)",
                        "request_body": {
                            "name": "New Conference"
                        },
                        "response": {
                            "success": {
                                "id": 2,
                                "name": "New Conference",
                                "updatedAt": "2024-01-05T10:00:00.000Z",
                                "createdAt": "2024-01-05T10:00:00.000Z"
                            }
                        }
                    },
                    {
                        "method": "PUT",
                        "path": "/:id",
                        "description": "Update a conference (Base)",
                        "request_body": {
                            "name": "Updated Conference Name"
                        },
                        "response": {
                            "success": {
                                "id": 1,
                                "name": "Updated Conference Name",
                                "updatedAt": "2024-01-02T12:00:00.000Z"
                            }
                        }
                    },
                    {
                        "method": "DELETE",
                        "path": "/:id",
                        "description": "Soft delete a conference (Base)",
                        "response": {
                            "success": {
                                "message": "Conference deleted successfully"
                            },
                            "error": {
                                "message": "Conference not found"
                            }
                        }
                    }
                ]
            },
            {
                "group": "Conference Template (Details)",
                "endpoints": [
